{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    // DOM for URL global in Node 16+ and browser type definitions for loot-core
    "lib": ["ES2021", "DOM"],
    "module": "node16",
    "moduleResolution": "node16",
    "noEmit": false,
    "noEmitOnError": false,
    "outDir": "build",
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "migrations/**/*",
    "types/**/*",
    "app.ts",
    "bin/**/*"
  ],
  "exclude": ["node_modules", "build", "coverage"]
}
